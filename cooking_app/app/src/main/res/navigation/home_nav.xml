<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.cooking_app.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_comuFragment"
            app:destination="@id/comuFragment" />
        <action
            android:id="@+id/action_homeFragment_to_myRecipeFragment"
            app:destination="@id/myRecipeFragment" />
        <action
            android:id="@+id/action_homeFragment_to_settingFragment"
            app:destination="@id/settingFragment" />
    </fragment>
    <fragment
        android:id="@+id/comuFragment"
        android:name="com.example.cooking_app.fragments.ComuFragment"
        android:label="fragment_comu"
        tools:layout="@layout/fragment_comu" >
        <action
            android:id="@+id/action_comuFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_comuFragment_to_myRecipeFragment"
            app:destination="@id/myRecipeFragment" />
        <action
            android:id="@+id/action_comuFragment_to_settingFragment"
            app:destination="@id/settingFragment" />
    </fragment>
    <fragment
        android:id="@+id/myRecipeFragment"
        android:name="com.example.cooking_app.fragments.MyRecipeFragment"
        android:label="fragment_my_recipe"
        tools:layout="@layout/fragment_my_recipe" >
        <action
            android:id="@+id/action_myRecipeFragment_to_comuFragment"
            app:destination="@id/comuFragment" />
        <action
            android:id="@+id/action_myRecipeFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_myRecipeFragment_to_settingFragment"
            app:destination="@id/settingFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingFragment"
        android:name="com.example.cooking_app.fragments.SettingFragment"
        android:label="fragment_setting"
        tools:layout="@layout/fragment_setting" >
        <action
            android:id="@+id/action_settingFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_settingFragment_to_myRecipeFragment"
            app:destination="@id/myRecipeFragment" />
        <action
            android:id="@+id/action_settingFragment_to_comuFragment"
            app:destination="@id/comuFragment" />
    </fragment>
</navigation>