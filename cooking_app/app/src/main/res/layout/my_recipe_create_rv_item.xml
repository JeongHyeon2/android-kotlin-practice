<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/my_recipe_create_rv_item_tv_count"
            android:layout_marginHorizontal="@dimen/cooking_app_padding_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/cooking_app_text_size_large"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="1."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <EditText
            android:layout_marginLeft="@dimen/cooking_app_padding_mini"
            android:paddingVertical="@dimen/cooking_app_padding_small"
            android:background="@android:color/transparent"
            android:id="@+id/my_recipe_create_rv_item_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="글을 입력하세요                                                         "
            android:textSize="@dimen/cooking_app_text_size_middle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/my_recipe_create_rv_item_tv_count"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>