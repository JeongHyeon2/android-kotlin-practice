<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/my_recipe_rv_item_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/cooking_app_padding_small"
    android:background="@drawable/rounded_background_stroke"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_margin="@dimen/cooking_app_padding_small"
            android:orientation="vertical"
            android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/my_recipe_rv_item_iv"
                    android:src="@drawable/my_recipe_icon"
                    android:scaleType="fitXY"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    />

            <TextView
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:id="@+id/my_recipe_rv_item_title"
                android:text="text_area"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                />

        </LinearLayout>

</LinearLayout>
