<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/my_recipe_rv_item_background"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/cooking_app_padding_small"
    android:background="@drawable/rounded_background_stroke">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >

        <ImageView
            android:padding="@dimen/cooking_app_padding_small"
            android:id="@+id/my_recipe_rv_item_iv"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:clipToOutline="true"
            android:scaleType="fitXY"
            android:src="@drawable/my_recipe_icon" />

        <TextView
            android:layout_marginBottom="@dimen/cooking_app_padding_small"
            android:id="@+id/my_recipe_rv_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="text_area"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
