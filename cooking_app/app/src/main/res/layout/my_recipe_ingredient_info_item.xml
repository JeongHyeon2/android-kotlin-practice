<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/grey_color"
    android:id="@+id/ingredient_info_linear"
    android:paddingBottom="@dimen/cooking_app_padding_mini"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ingredient_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scrollHorizontally="true"
            android:text="재료명"
            android:textColor="@color/black"
            android:textSize="@dimen/cooking_app_text_size_middle" />
        <TextView
            android:id="@+id/ingredient_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scrollHorizontally="true"
            android:text="용량"
            android:textColor="@color/black"
            android:textSize="@dimen/cooking_app_text_size_middle" />
        <TextView
            android:id="@+id/ingredient_purchase"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scrollHorizontally="true"
            android:text="얼만큼"
            android:textColor="@color/black"
            android:textSize="@dimen/cooking_app_text_size_middle" />

        <TextView
            android:id="@+id/ingredient_calorie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scrollHorizontally="true"
            android:text="칼로리"
            android:textColor="@color/black"
            android:textSize="@dimen/cooking_app_text_size_middle" />
    </LinearLayout>
</LinearLayout>
